extends layout

include modules/aside
include components/card

block title
    title= title

block content
    .wrapper
        each current in categories
            if current.slug == category
                h1.category-name= current.name
        .section-blog
            .row
                .col-md-8.col-lg-9
                    section.section-posts
                        if posts.length
                            .row
                                each post in posts
                                    .col-md-6.col-lg-4
                                        +card(post)
                        else
                            p Постов пока нет...

                        include components/pagination

                .col-md-4.col-lg-3
                    +aside(categories, category)